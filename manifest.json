{
    "manifest_version": 2,
    "name": "Video Container Transparency",
    "version": "1.1",
    "description": "Toggle opacity for #video-container on any webpage.",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "permissions": ["storage", "activeTab"],
    "browser_specific_settings": {
      "gecko": {
        "id": "video-opacity@your-extension.com"
      }
    }
  }
  